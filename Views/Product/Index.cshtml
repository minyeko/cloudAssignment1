@{
}

@model IEnumerable<TechWaveOnlineShopping.ViewModels.ProductViewModel>

<h2>Product Listing</h2>

<br />
<table id="productTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>
                    <img src="@Url.Action("GetImage", "Product", new { id = product.Id})" style="width: 50px; height: 50px;" alt="Product Image" class="img-thumbnail" />
                </td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.Quantity</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("View", "Product", new { id = product.Id })" class="btn btn-sm btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#productTable').DataTable({
            "paging": true,
            "pageLength": 10,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>