@model TechWaveOnlineShopping.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post">

    <div class="form-group row mb-3">
        <label for="Email" class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-9">
            <input asp-for="Email" class="form-control" id="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="Password" class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-9">
            <input asp-for="Password" class="form-control" id="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-3">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div class="form-group mb-3">
        <a asp-controller="Customer" asp-action="Register">Don't have an account? Register here</a>
    </div>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(""))
    {
        <div class="alert alert-danger">
            @ViewData.ModelState[""].Errors.First().ErrorMessage
        </div>
    }

    @if (TempData["LogoutMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["LogoutMessage"]
        </div>
    }

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
